        <ActivityIndicator
          x:Name="ImageActivityIndicator"
          Scale="2"
          IsVisible="False"
          Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
          HorizontalOptions="Center"
          VerticalOptions="Center" />
    </Grid>
</ContentPage>