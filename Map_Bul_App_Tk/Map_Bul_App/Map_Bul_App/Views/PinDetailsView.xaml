        <design:PhotoPreviewStack x:Name="SelectedPhotoStackLayout"
                                  Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                                  HorizontalOptions="FillAndExpand"
                                  Source="{Binding SelectedPhoto}"
                                  CloseCommand="{Binding DeselectPhotoCommand}"
                                  IsVisible="False"
        />
        
